<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Premium Header with Gradient Effect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STUDENT MANAGER"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Action Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

              <!-- Primary Actions Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                  <Button
                    android:id="@+id/btnAdd"
                    style="@style/ButtonStylePrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add"
                    android:layout_marginEnd="8dp"/>

                  <Button
                        android:id="@+id/btnView"
                        style="@style/ButtonStylePrimary"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="View All"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <!-- Secondary Actions Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnUpdate"
                        style="@style/ButtonStyleSecondary"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Update"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnDelete"
                        style="@style/ButtonStyleSecondary"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <!-- Clear Button -->
                <Button
                    android:id="@+id/btnClear"
                    style="@style/ButtonStyleOutline"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Clear Fields"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    style="@style/CardTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Information"
                    android:textColor="@color/primary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student ID"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etStudentId"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter ID (for Update/Delete)"
                        android:inputType="number"
                        android:textColorHint="@color/gray_400"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student Name"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etName"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter full name"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/gray_400"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"/>

                        <EditText
                            android:id="@+id/etAge"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Age"
                            android:inputType="number"
                            android:textColorHint="@color/gray_400"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Grade"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"/>

                        <EditText
                            android:id="@+id/etGrade"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Grade"
                            android:inputType="text"
                            android:textColorHint="@color/gray_400"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Records Display Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    style="@style/CardTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Records"
                    android:textColor="@color/primary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_light"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvStudentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No students found. Click 'View All' to see records."
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:padding="16dp"
                    android:gravity="center"
                    android:minHeight="240dp"
                    android:background="@color/gray_50"
                    android:layout_marginStart="-24dp"
                    android:layout_marginEnd="-24dp"
                    android:layout_marginBottom="-24dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
